            <directory>../../etc</directory>
            <outputDirectory>axis2-${version}-src/etc</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
	    <excludes>
		<exclude>.svn/**</exclude>
	    </excludes>
        </fileSet>
        <fileSet>
            <directory>../..</directory>
            <outputDirectory>axis2-${version}-src</outputDirectory>
            <includes>
